{
  "name": "lesscode-component",
  "version": "0.0.5",
  "description": "业务组件",
  "license": "MIT",
  "author": "Tencent BlueKing",
  "scripts": {
    "prepublishOnly": "run-p build dts",
    "release": "tsx scripts/release.ts",
    "dev": "vite --mode development -c scripts/vite.dev.ts",
    "build": "tsx ./scripts/vite.build.ts",
    "dts": "vue-tsc --project tsconfig.dts.json",
    "prettier": "prettier ./src ./scripts ./playground --write",
    "visualize": "vite-bundle-visualizer -c scripts/vite.vusualizer.ts"
  },
  "exports": {
    ".": {
      "types": "./typings/vue3.d.ts",
      "import": "./vue3/index.es.min.js",
      "default": "./vue3/index.es.min.js"
    },
    "./vue3": {
      "types": "./typings/vue3.d.ts",
      "import": "./vue3/index.es.min.js",
      "default": "./vue3/index.es.min.js"
    },
    "./vue2": {
      "types": "./typings/vue2.d.ts",
      "import": "./vue2/index.es.min.js",
      "default": "./vue2/index.es.min.js"
    },
    "./vue3/*": "./vue3/*",
    "./vue2/*": "./vue2/*"
  },
  "typesVersions": {
    "*": {
      ".": [
        "./typings/vue3.d.ts"
      ],
      "vue3": [
        "./typings/vue3.d.ts"
      ],
      "vue2": [
        "./typings/vue2.d.ts"
      ]
    }
  },
  "types": "./typings/vue3.d.ts",
  "module": "vue3/index.es.min.js",
  "unpkg": "vue3/index.es.min.js",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "peerDependencies": {
    "@blueking/bkui-library": "^0.0.0-beta.4",
    "bkui-vue": "^1.0.3-beta.38",
    "dayjs": "^1.11.10",
    "vue": "^3"
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "@types/prompts": "^2.4.9",
    "@types/semver": "^7.5.8",
    "@typescript-eslint/eslint-plugin": "^7.6.0",
    "@typescript-eslint/parser": "^7.6.0",
    "@vitejs/plugin-vue": "^5.0.4",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-tencent": "^1.0.4",
    "eslint-plugin-codecc": "1.0.0-beta.1",
    "eslint-plugin-perfectionist": "^2.8.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-vue": "^9.24.1",
    "execa": "^8.0.1",
    "less": "^4.2.0",
    "lint-staged": "^15.2.2",
    "npm-run-all": "^4.1.5",
    "picocolors": "^1.0.0",
    "postcss-html": "^1.6.0",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.2.5",
    "prompts": "^2.4.2",
    "sass": "^1.74.1",
    "semver": "^7.6.0",
    "simple-git-hooks": "^2.11.1",
    "stylelint": "^16.3.1",
    "stylelint-config-recess-order": "^5.0.0",
    "stylelint-config-recommended-vue": "1.5.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-order": "^6.0.4",
    "stylelint-scss": "^6.2.1",
    "terser": "^5.30.3",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.2",
    "tsx": "^4.7.2",
    "typescript": "^5.4.5",
    "vite": "^5.2.8",
    "vite-bundle-visualizer": "^1.1.0",
    "vite-plugin-css-injected-by-js": "^3.5.0",
    "vite-plugin-inspect": "^0.8.3",
    "vue-eslint-parser": "^9.4.2",
    "vue-tsc": "^2.0.12",
    "zip-a-folder": "^3.1.6"
  },
  "engines": {
    "node": ">=18.16.0"
  },
  "browserslist": [
    "> 0.5%",
    "last 2 versions",
    "Firefox ESR",
    "not dead"
  ],
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "commit-msg": "node scripts/verify.commit.mjs"
  },
  "lint-staged": {
    "*.{js,json}": [
      "prettier --write"
    ],
    "*.{ts?(x),vue}": [
      "eslint --fix"
    ]
  }
}
